                        	<div class="fa fa-fw fa-krw"></div>
                        	<fmt:formatNumber value="${moneyBookResult.mb_outgo}"  pattern="#,###" type="currency"/>
                        </td>
                        <td>
                           
                        </td>
                    </tr>
              		
                    <!-- Collapse -->
                   
	                    <tr>
						    <td colspan="6" class="hiddenRow">
