	           url:"/expenseOutTypeResult",
	           dataType:"JSON", 
	           success:function(jsonObject,status,jqXHR){
	               alert(jsonObject);
	           },
	           error:function(jqXHR,textStatus,errorThrown){
	        	   alert("error:"+jqXHR.status);
	           }
	     });
	}); */
}); 
</script>

